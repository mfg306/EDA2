package org.eda2;

public class Prueba {
	
	public static int MaxMin(int[] a, int i, int j) { //Solo voy a devolver el max
		int max = 0, min = 0;
		if(i >= j-1) {//CASO BASE
			if(j == i) max  = min = a[i];
		 else {
			if(a[i] > a[j]) {
				max = a[i];
				min = a[j];
			} else {
				max = a[j];
				min = a[i];
			}
		 }
		} else { //CASOS RECURSIVOS
			int mitad = (i+j)/2;
			int max1 = MaxMin(a, i, mitad);
			int max2 = MaxMin(a, mitad+1, j);
			
			//Ahora combinamos los resultados
			
			if(max1 > max2) max = max1;
			
		}
		
		return max;
	}
	

	public static void main(String[] args) {
		
		int[] array = {5,3,8,1,2};
		
		int max = MaxMin(array, 0, 4);
		
		System.out.println(max);
		
		
	}

}
