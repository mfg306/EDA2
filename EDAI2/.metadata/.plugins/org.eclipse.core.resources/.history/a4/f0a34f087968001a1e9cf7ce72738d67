package org.eda2;

public class Prueba {
	
	public static int MaxMin(int[] a, int i, int j) {
		int max, min;
		if(i >= j-1) {//CASO BASE
			if(j == i) max  = min = a[i];
		} else {
			if(a[i] > a[j]) {
				max = a[i];
				min = a[j];
			} else {
				max = a[j];
				min = a[i];
			}
		}
	}
	

	public static void main(String[] args) {
		
		
	}

}
